#!/usr/bin/env python3
"""
æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜æ†¶è¿½è·¡ã‚·ã‚¹ãƒ†ãƒ 
30åˆ†é–“éš”ã§è‡ªå‹•å®Ÿè¡Œãƒ»Gitè‡ªå‹•ä¿å­˜ã¨ä¸¦è¡Œç¨¼åƒ
"""

import logging
import os
import subprocess
import time
from datetime import datetime, timedelta


class TimeBasedMemoryTracker:
    def __init__(self, project_dir, interval_minutes=30):
        self.project_dir = project_dir
        self.interval_seconds = interval_minutes * 60
        self.history_file = os.path.join(
            project_dir, "docs", "MEMORY_EXECUTION_HISTORY.md"
        )
        self.pid_file = os.path.join(project_dir, ".memory_tracker.pid")
        # ãƒ­ã‚®ãƒ³ã‚°è¨­å®š
        log_file = os.path.join(project_dir, ".memory_tracker_debug.log")
        logging.basicConfig(
            filename=log_file,
            level=logging.INFO,
            format="%(asctime)s - %(levelname)s - %(message)s",
        )

    def get_current_git_commit_id(self):
        """ç¾åœ¨ã®Gitã‚³ãƒŸãƒƒãƒˆIDã‚’å–å¾—"""
        try:
            result = subprocess.run(
                ["git", "rev-parse", "--short", "HEAD"],
                capture_output=True,
                text=True,
                check=True,
                cwd=self.project_dir,
                timeout=30,
            )
            return result.stdout.strip()
        except (subprocess.CalledProcessError, subprocess.TimeoutExpired):
            return "unknown"

    def get_memory_update_count(self):
        """æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜æ†¶æ›´æ–°ã®å›æ•°ã‚’å–å¾—"""
        try:
            if not os.path.exists(self.history_file):
                return 0

            with open(self.history_file, encoding="utf-8") as f:
                content = f.read()

            # æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜æ†¶è¿½è·¡å®Ÿè¡Œã®å›æ•°ã‚’ã‚«ã‚¦ãƒ³ãƒˆ
            count = content.count("æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜æ†¶è¿½è·¡å®Ÿè¡Œ")
            return count
        except Exception:
            return 0

    def log_memory_update(self, reason="å®šæœŸå®Ÿè¡Œ"):
        """è¨˜æ†¶æ›´æ–°ã‚’ãƒ­ã‚°è¨˜éŒ²ï¼ˆå›æ•°ãƒ»GitIDãƒ»PIDä»˜ãï¼‰"""
        current_time = datetime.now().strftime("%Y-%m-%d %H:%M:%S JST")

        # æ›´æ–°å›æ•°å–å¾—ï¼ˆç¾åœ¨ã®å›æ•° + 1ï¼‰
        update_count = self.get_memory_update_count() + 1

        # Gitã‚³ãƒŸãƒƒãƒˆIDå–å¾—
        git_commit_id = self.get_current_git_commit_id()

        # è¨˜æ†¶è¿½è·¡PIDå–å¾—
        memory_pid = os.getpid()

        # Gitè‡ªå‹•ä¿å­˜PIDå–å¾—
        git_pid = self.get_git_auto_save_pid()

        # ãƒ­ã‚°ã‚¨ãƒ³ãƒˆãƒªä½œæˆ
        log_entry = f"{current_time} - ç¬¬{update_count}å›ç›®æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜æ†¶è¿½è·¡å®Ÿè¡Œ ({reason}) [Git:{git_commit_id}] [è¨˜æ†¶PID:{memory_pid}] [GitPID:{git_pid}]\n"

        try:
            with open(self.history_file, "a", encoding="utf-8") as f:
                f.write(log_entry)
            print(f"ğŸ§  [è¨˜æ†¶è¿½è·¡#{update_count}] {current_time} - {reason}")
            print(f"ğŸ“‹ GitçŠ¶æ³: {git_commit_id} | è¨˜æ†¶PID: {memory_pid} | GitPID: {git_pid}")
            print("ğŸ“– å¿…é ˆç¢ºèª: CLAUDE_UNIFIED_SYSTEM.md â†’ çµ±åˆæƒ…å ±èª­ã¿è¾¼ã¿")

            # 3åˆ†ã¨30åˆ†ã®åŒæ™‚ä¿å­˜ã‚¿ã‚¤ãƒŸãƒ³ã‚°åˆ¤å®š
            if update_count % 10 == 0:  # 30åˆ†Ã—10å› = 5æ™‚é–“æ¯
                print("âš¡ æ³¨æ„: Gitè‡ªå‹•ä¿å­˜(3åˆ†)ã¨è¨˜æ†¶è¿½è·¡(30åˆ†)ã®åŒæ™‚ä¿å­˜ã‚¿ã‚¤ãƒŸãƒ³ã‚°å¯èƒ½æ€§ã‚ã‚Š")

            return True
        except Exception as e:
            print(f"âŒ ãƒ­ã‚°è¨˜éŒ²ã‚¨ãƒ©ãƒ¼: {e}")
            return False

    def get_git_auto_save_pid(self):
        """Gitè‡ªå‹•ä¿å­˜ã®PIDã‚’å–å¾—"""
        try:
            git_pid_file = os.path.join(self.project_dir, ".auto_git.pid")
            if os.path.exists(git_pid_file):
                with open(git_pid_file) as f:
                    return f.read().strip()
            return "åœæ­¢ä¸­"
        except Exception:
            return "ä¸æ˜"

    def should_trigger_memory_update(self):
        """è¨˜æ†¶æ›´æ–°ãŒå¿…è¦ã‹ãƒã‚§ãƒƒã‚¯"""
        try:
            # æœ€å¾Œã®æ›´æ–°æ™‚åˆ»ã‚’å–å¾—
            if not os.path.exists(self.history_file):
                return True, "åˆå›å®Ÿè¡Œ"

            with open(self.history_file, encoding="utf-8") as f:
                lines = f.readlines()

            # æœ€æ–°ã®æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜éŒ²ã‚’æ¢ã™
            last_time_based = None
            for line in reversed(lines):
                if "æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜æ†¶è¿½è·¡å®Ÿè¡Œ" in line:
                    # 2025-07-13 07:45:30 JST å½¢å¼ã‹ã‚‰æ™‚åˆ»æŠ½å‡º
                    time_str = line.split(" - ")[0]
                    last_time_based = datetime.strptime(
                        time_str, "%Y-%m-%d %H:%M:%S JST"
                    )
                    break

            if last_time_based is None:
                return True, "æ™‚é–“ãƒ™ãƒ¼ã‚¹åˆå›å®Ÿè¡Œ"

            # 30åˆ†çµŒéãƒã‚§ãƒƒã‚¯
            now = datetime.now()
            elapsed = now - last_time_based
            if elapsed.total_seconds() >= self.interval_seconds:
                return True, f"30åˆ†çµŒé (å‰å›: {last_time_based.strftime('%H:%M')})"

            return (
                False,
                f"å¾…æ©Ÿä¸­ (æ¬¡å›: {(last_time_based + timedelta(seconds=self.interval_seconds)).strftime('%H:%M')})",
            )

        except Exception as e:
            print(f"âš ï¸ æ™‚åˆ»ãƒã‚§ãƒƒã‚¯ã‚¨ãƒ©ãƒ¼: {e}")
            return True, "ã‚¨ãƒ©ãƒ¼å›å¾©å®Ÿè¡Œ"

    def run_daemon(self):
        """ãƒ‡ãƒ¼ãƒ¢ãƒ³ãƒ¢ãƒ¼ãƒ‰å®Ÿè¡Œ"""
        print(f"[{datetime.now()}] æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜æ†¶è¿½è·¡ãƒ‡ãƒ¼ãƒ¢ãƒ³é–‹å§‹")
        print(f"ç›£è¦–å¯¾è±¡: {self.project_dir}")
        print(f"å®Ÿè¡Œé–“éš”: {self.interval_seconds // 60}åˆ†")

        # èµ·å‹•æ™‚ã«å³åº§ã«ãƒã‚§ãƒƒã‚¯
        should_trigger, reason = self.should_trigger_memory_update()
        if should_trigger:
            self.log_memory_update(reason)
        else:
            print(f"ğŸ“Š {reason}")

        while True:
            try:
                should_trigger, reason = self.should_trigger_memory_update()
                if should_trigger:
                    self.log_memory_update(reason)
                else:
                    print(f"ğŸ“Š [{datetime.now().strftime('%H:%M:%S')}] {reason}")

                # 5åˆ†æ¯ã«ãƒã‚§ãƒƒã‚¯ï¼ˆ30åˆ†é–“éš”ã§ã®å®Ÿè¡Œåˆ¤å®šï¼‰
                time.sleep(300)  # 5åˆ†

            except KeyboardInterrupt:
                print(f"[{datetime.now()}] æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜æ†¶è¿½è·¡åœæ­¢")
                break
            except Exception as e:
                print(f"[{datetime.now()}] äºˆæœŸã—ãªã„ã‚¨ãƒ©ãƒ¼: {e}")
                time.sleep(300)


def main():
    import argparse

    parser = argparse.ArgumentParser(description="æ™‚é–“ãƒ™ãƒ¼ã‚¹è¨˜æ†¶è¿½è·¡ã‚·ã‚¹ãƒ†ãƒ ")
    parser.add_argument("--daemon", action="store_true", help="ãƒ‡ãƒ¼ãƒ¢ãƒ³ãƒ¢ãƒ¼ãƒ‰ã§å®Ÿè¡Œ")
    parser.add_argument("--interval", type=int, default=30, help="å®Ÿè¡Œé–“éš”ï¼ˆåˆ†ï¼‰")
    parser.add_argument("--project-dir", default=None, help="ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒª")

    args = parser.parse_args()

    # ãƒ—ãƒ­ã‚¸ã‚§ã‚¯ãƒˆãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªæ±ºå®š
    if args.project_dir:
        project_dir = args.project_dir
    else:
        script_dir = os.path.dirname(os.path.abspath(__file__))
        project_dir = os.path.dirname(script_dir)

    tracker = TimeBasedMemoryTracker(project_dir, args.interval)

    if args.daemon:
        tracker.run_daemon()
    else:
        # 1å›å®Ÿè¡Œ
        should_trigger, reason = tracker.should_trigger_memory_update()
        if should_trigger:
            tracker.log_memory_update(reason)
        else:
            print(f"ğŸ“Š {reason}")


if __name__ == "__main__":
    main()
